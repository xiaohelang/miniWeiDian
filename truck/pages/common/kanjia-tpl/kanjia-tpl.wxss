.group-box{
  padding: 20rpx 25rpx;
  background: #fff;
  height: auto;
  overflow: hidden;
}
.product-img{
  width: 170rpx;
  height: 170rpx;
  float: left;
}
.product-message{
  width: 510rpx;
  float: left;
  margin-left: 20rpx;
}
.pro-title{
  font-size: 28rpx;
  line-height: 35rpx;
  color: #333;
  -webkit-text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.group-message{
  font-size: 24rpx;
  color: #8e8e8e;
  /*height: 0.58rem*/
  line-height: 32rpx;
  margin: 10rpx 0 10rpx 0;
  -webkit-text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.product-price{
  font-size: 40rpx;
  color: #f96c9e;
  height: 32rpx;
  line-height: 32rpx;
}
.odd-price{
  font-size: 24rpx;
  float: left;
  color: #8e8e8e;
}
.new-price{
  font-size: 24rpx;
  float: right;
} 