/* pages/me/me.wxss */
page{
  background: #f4f4f4;
}
.userHeaderBox{
  display: flex;
  flex-direction: row;
  height: 225rpx;
  position: relative;
}
.user-bg{
  width: 100%;
  height: 225rpx;
}
.userInfo-box{
  display: flex;
  flex-direction: row;
  position: absolute
}
.avr-head{
  width: 100rpx;
  height: 100rpx;
  border:2rpx solid #fff;
  border-radius: 50%;
  margin: 52rpx 26rpx 0 129rpx;
}
.userOrderBox{
  margin-top: 16rpx;
  background: #fff;
  font-size: 28rpx;
}
.usermsg{
  width: 450rpx;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #fff;
  margin-top: 60rpx;
}
.iphoneInfo{
  display: block;
  margin-top: 25rpx;
}
.allOrder-box{
  padding: 0 23rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  border-bottom: 1px solid #D9D9D9
}
.readAll{
  float: right;
  color: #999;
  padding-right: 40rpx;
}
.arrowIcon{
  width: 16rpx;
  height: 16rpx;
  top: 32rpx;
  right: 20rpx;
}
.order-tab{
  display: flex;
  flex-direction: row;
  padding: 40rpx 0 20rpx 0;
}
.tabList{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.tabIcon{
  width: 38rpx;
  height: 38rpx;
  margin-bottom: 10rpx;
}
.tabPosition{
  position: relative
}
.tabNum{
  width: 37rpx;
  height: 37rpx;
  background: #ff0012;
  border-radius: 50%;
  font-size: 22rpx;
  color: #fff;
  line-height: 37rpx;
  text-align: center;
  position: absolute;
  top: -15rpx;
  right: -20rpx;
}
.user-model{
  margin-top: 11rpx;
}
.public-user-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 99rpx;
  line-height: 99rpx;
  background: #fff;
  font-size: 28rpx;
  padding: 0 23rpx;
  border-bottom: 1px solid #E8E8E8;
  position: relative
}
.addresIcon{
  width: 38rpx;
  height: 38rpx;
  margin-right: 15rpx;
}
.defual-adders{
  position: absolute;
  right: 23rpx;
  padding-right: 40rpx;
  color: #999;
}
.arrowTo{
  top: 42rpx;
}