/* pages/details/details.wxss */
@import "../common/grouplist-tpl/grouplist-tpl.wxss";
page{
  background: rgb(244,244,244)
}
.swiper-box{
  height: 750rpx;
}
.slide-image{
  width: 100%;
  height: 750rpx;
}
.details-box{
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 20rpx 24rpx;
}
.detail-title{
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.detail-spec{
  font-size: 24rpx;
  color: #333;
  margin-bottom: 26rpx;
}
.groupTemple{
  padding: 24rpx 0;
  border-top: 2rpx solid #E8E8E9;
}
.noGroup{
  text-align: center;
  font-size: 28rpx;
  border-top: 1px solid #E8E8E9;
  padding: 25rpx 0;
}
.price{
  color: #F96C9E;
  font-size: 34rpx;
  margin-bottom: 24rpx;
}
.price-compay{
  font-size: 29rpx;
}
.price-footer{
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  color: #ccc;
}
.mark-price{
  text-decoration: line-through
}
.groups-box{
  position: absolute;
  right: 24rpx;
  color: #8E8E8E
}
.groupModel{
  padding: 0 24rpx;
}
.public-detais-box{
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 11rpx;
}

.group-box{
  height: auto;
}
.group-title{
  display: flex;
  flex-direction: row;
  height: 83rpx;
  line-height: 83rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}
.team-rules{
  font-size: 28rpx;
  padding: 29rpx 0 29rpx 25rpx
}
.rules-box{
  display: flex;
  flex-direction: row;
  padding-bottom: 33rpx;
  position: relative;
}
.rules-box:after{
  width: 80%;
  content:"";
  position: absolute;
  top: 30rpx;
  left: 50%;
  margin-left: -40%;
  border-top: 2rpx solid #CCCCCC;
}
.rules-box-spec{
  display: flex;
  flex-direction: column;
  flex: 1;
  z-index: 1;
  font-size: 24rpx;
  text-align: center;
  color: #8E8E8E;
}
.rules-number{
  width: 60rpx;
  height: 60rpx;
  background: #F96C9E;
  border-radius: 50%;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  margin: auto;
  margin-bottom: 18rpx;
}
.user-comment{
  font-size: 28rpx;
  padding: 0 24rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #E8E8E9
}
.read-comment{
  float: right;
  color: #8E8E8E;
}
.user-comment-content{
  display: flex;
  flex-direction: column;
  padding: 0 24rpx;
}
.comment-list{
  padding: 20rpx 0;
  border-bottom: 1px solid #E8E8E9
}
.comment-title{
  display: flex;
  flex-direction: row;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
}
.user-header{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.commet-time{
  position: absolute;
  right: 24rpx;
  color: #ccc;
}
.comment-text{
  display: inline-block;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #8E8E8E;
  margin-top: 10rpx;
}
.detail-contens{
  margin-bottom: 96rpx;
}
.detail-footer-box{
  position: fixed;
  width: 100%;
  display: flex;
  height: 96rpx;
  flex-direction: row;
  bottom: 0;
  background: #fff;
  z-index: 5
}
.detail-model{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  width: 100rpx;
  vertical-align: bottom;
  text-align: center;
}
.detail-icon{
  width: 48rpx;
  height: 48rpx;
  vertical-align: bottom;
  margin: auto;
}
.pulic-footer{
  display: flex;
  flex-direction: row;
}
.model-btn{
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  text-align: center;
  width: 275rpx;
  background: #F96C9E;
  color: #fff;
}
.model-padding{
  padding: 6rpx 0;
}
.buy-price{
  font-size: 28rpx;
}
.zhijiebtn{
  background: #FF8BB4;
}
.vertical-btn{
  line-height: 98rpx;
}
.buying-btn{
  width: 550rpx;
  height: 98rpx;
  line-height: 98rpx;
  background: #FF8BB4;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}
