/* pages/orderDetails/orderDetails.wxss */
page{
  background: rgb(244,244,244)
}
.address-box{
  display: flex;
  flex-direction: row;
  border-top: 1px solid #E8E8E8;
  background: #fff;
  padding: 28rpx 36rpx;
  font-size: 28rpx;
}
.icon-box{
  display: flex;
  align-items: center;
  justify-content: center;
}
.addres-icon{
  width: 32rpx;
  height: 38rpx;
  margin-right: 36rpx;
}
.addres-contens{
  margin-right: 30rpx;
}
.iphonNumber{
  float: right;
}
.address-conten{
  display: inline-block;
  margin-top: 20rpx;
}
.delivery-address{
  display: flex;
  flex-direction: row;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 28rpx;
  font-size: 28rpx;
  background: #fff;
  position: relative;
  border-top: 1px solid #E8E8E8;
}
.orderProdust-box{
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 11rpx;
}
.proTitle{
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  padding: 0 36rpx;
}
.shopLogo{
  width: 32rpx;
  height: 32rpx;
  margin-right: 11rpx;
}
.play-state{
  color: #F96C9E;
  position: absolute;
  right: 36rpx;
}
.produst-boxs{
  display: flex;
  flex-direction: row;
  background: rgb(244, 244, 244);
  padding: 18rpx 0;
}
.produstImg{
  width: 168rpx;
  height: 168rpx;
  margin: 0 21rpx 0 24rpx;
}
.order-infor{
  width: 505rpx;
  display: flex;
  flex-direction: column;
}
.infortion-box{
  display: flex;
  flex-direction: row;
}
.informatName{
  width: 300rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.contansSpec{
  font-size: 24rpx;
}
.line-throuht{
  text-decoration: line-through;
}
.spec-margin{
  margin-top: 20rpx;
  color: #8E8E8E;
}
.shop-price{
  font-size: 28rpx;
  color: #F96C9E;
}
.posit-pics{
  position: absolute;
  right: 35rpx;
}
.product-footer{
  height: 100rpx;
  background: #fff;
}
.buy-text{
  float: left;
  line-height: 100rpx;
  font-size: 28rpx;
  margin-left: 35rpx;
}
.buy-boxing{
  width: 210rpx;
  display: flex;
  flex-direction: row;
  height: 55rpx;
  float: right;
  margin: 22rpx 36rpx 0 0;
}
.public-btn{
  width: 65rpx;
  height: 55rpx;
  text-align: center;
  background: #F4F4F4;
  border-radius: 5rpx;
}
.inputNumber{
  width: 79rpx;
  height: 55rpx;
  text-align: center;
  font-size: 32rpx;
}
.pay-method{
  display: flex;
  flex-direction: row;
  height: 98rpx;
  margin-top: 11rpx;
  background: #fff;
  font-size: 28rpx;
  line-height: 98rpx;
}
.watch-icon{
  width: 50rpx;
  height: 50rpx;
  margin: 28rpx 23rpx 0 15rpx;
}
.order-foods{
  width: 100%;
  position: fixed;
  height: 98rpx;
  line-height: 98rpx;
  background: #fff;
  left: 0;
  bottom: 0;
}
.pay-money-box{
  float: right;
  font-size: 28rpx;
  margin-right: 40rpx;
}
.payment-btn{
  display: block;
  float: right;
  width: 237rpx;
  height: 98rpx;
  background: #F96C9E;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}
.money-color{
  color: #F96C9E;
}
.max-money{
  font-size: 42rpx;
}
.facing-right{
  display: inline-block;  
  border-right: 3rpx solid #8E8E8E; 
  border-bottom: 3rpx solid #8E8E8E;  
  width: 22rpx; 
  height: 22rpx;
  position: absolute;
  right: 30rpx;
  top: 70rpx;
  transform: rotate(-45deg);  
}
.addressIcon{
  top: 35rpx
}